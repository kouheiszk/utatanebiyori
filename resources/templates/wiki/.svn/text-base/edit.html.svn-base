<rt:extends href="index.html" />

<rt:block name="title"> :: _("Wiki") :: {$object.wikiName}_("の編集")</rt:block>

<rt:block name="contents-header">
<h2>_("Wiki")&nbsp;::&nbsp;{$object.wikiName}_("の編集")</h2>
</rt:block>

<rt:block name="add-toolbar-header" />

<rt:block name="url">
<p class="caption" id="linked_url">
<span id="linked_url_text">{$rhaco.constant('BEFOR_URI')}{$rhaco.uri()}</span>
<span id="linked_url_copy" style="display: none;"><input size="100" id="linked_url_copy_input" type="text" style="border: dotted 1px #ccc; padding: 2px; width: 100%;" value="{$rhaco.constant('BEFOR_URI')}{$rhaco.uri()}" readonly></span>
</p>
</rt:block>

<rt:block name="contents-left" />

<rt:block name="main">
<div id="edit">
<rt:invalid>
  <rt:loop param="errors" var="e">
    <p class="warning">{$e}</p>
  </rt:loop>
</rt:invalid>
<form action="{$rhaco.url('wiki')}/edit/{$object.wikiName}" method="post" id="edit-form" rt:reference="false">
<table>
  <tr>
    <th>ページ名</th>
    <td><input class="w80" type="text" name="wikiName" value="{$object.wikiName}" <rt:if param="{$wf.p({$object.wikiName})}">disabled</rt:if> /></td>
  </tr>
</table>
<textarea id="form-text" name="text">{$object.text}</textarea>
<rt:if param="{$login}">
<input type="hidden" name="userId" value="{$login.id}" />
<rt:else />
<input type="hidden" name="userId" value="" />
</rt:if>
<input type="hidden" name="wikiId" value="{$object.id}" />
<input type="submit" name="update" id="update_button" value="_('更新')" />
<input type="button" name="preview" id="preview_button" value="_('プレビュー')" />
<input type="submit" name="cancel" id="cancel_button" value="_('キャンセル')" />
<input type="hidden" name="original_name" value="{$object.wikiName}" />
<textarea name="original_text" rows="1" cols="1" style="display:none">{$object.text}</textarea>
</form>
</div>
</rt:block>