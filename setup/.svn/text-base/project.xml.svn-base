<project rhacover="1.6.1" version="0.6.0" name="utatanebiyori" pathinfo="index.php" xmlns="http://rhaco.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://rhaco.org http://m.rhaco.org/xsd/project_1_6_1.xsd">
  <database name="utatanebiyori" renew="true">
    <rt:comment>Users</rt:comment>
      <table name="users">
        <column name="id" />
        <column name="user_id" require="true" unique="true" chartype="^[a-zA-Z0-9]+$" label="ユーザーID" />
        <column name="user_name" require="true" unique="true" max="30" label="ユーザー名" />
        <column name="email" type="email" require="true" unique="true" label="メールアドレス" />
        <column name="password" require="true" label="パスワード" />
        <column name="image" />
        <column name="image_x" type="int" />
        <column name="image_y" type="int" />
        <column name="introduce_id" type="int" />
        <column name="private_flag" type="bool" default="false" />
        <column name="last_login" type="timestamp" default="sysdate" />
        <column name="created_at" type="timestamp" default="sysdate" />
        <column name="updated_at" type="timestamp" default="sysdate" />
        <column name="delete_flag" type="bool" default="false" />
        <column name="act_key" />
        <extra name="new_password" min="3" />
        <extra name="password_conf" />
      </table>

      <rt:comment>Counter</rt:comment>
      <table name="counter">
        <description>Counter</description>
        <column name="id" />
        <column name="year" type="int" label="年" />
        <column name="month" type="int" label="月" />
        <column name="day" type="int" />
        <column name="yesterday" type="int" label="昨日のアクセス数" />
        <column name="today" type="int" label="今日のアクセス数" />
        <column name="total" type="int" label="全体のアクセス数" />
        <column name="host" type="text" />
      </table>

      <rt:comment>Whisper</rt:comment>
      <rt:include href="./whisper/whisper.xml" />

      <rt:comment>Uploader</rt:comment>
      <rt:include href="./wikis/wikis.xml" />
      <rt:include href="./wikis/wikis_backup.xml" />
      <rt:include href="./wikis/wikis_attach.xml" />

      <rt:comment>Uploader</rt:comment>
      <rt:include href="./uploader/uploader.xml" />
      <rt:include href="./uploader/uploader_category.xml" />
    </database>
